<!DOCTYPE html>
<html>
<head>
  <title>Product List</title>
  <style>
    .product { border: 1px solid #ccc; margin: 10px; padding: 10px; }
    img { max-width: 150px; }
  </style>
</head>
<body>
  <h1>Product List</h1>
  <% products.forEach(product => { %>
    <div class="product">
      <h2><%= product.name %> - $<%= product.price %></h2>
      <img src="<%= product.image %>" alt="<%= product.name %>"/>
      <p><%= product.description %></p>
      <p>Type: <%= product.product %> | Color: <%= product.color %></p>
      <p>Created: <%= product.createdAt %></p>
    </div>
  <% }) %>
  <% products.forEach(product => { %>
    <div class="product">
      <h2><%= product.name %> - $<%= product.price %></h2>
      <img src="<%= product.image %>" alt="<%= product.name %>"/>
      <p><%= product.description %></p>
      <p>Type: <%= product.product %> | Color: <%= product.color %></p>
      <p>Created: <%= product.createdAt %></p>
      <form action="/api/view/product/<%= product.id %>?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit">Delete</button>
      </form>
      <form action="/api/view/product/<%= product.id %>?_method=PUT" method="GET" style="display:inline;">
        <button type="submit">Edit</button>
      </form>
    </div>
  <% }) %>
  <h2>Add Product</h2>
  <form action="/api/products" method="POST">
    <input name="name" placeholder="Name" required>
    <input name="price" placeholder="Price" type="number" required>
    <input name="description" placeholder="Description" required>
    <input name="product" placeholder="Type" required>
    <input name="color" placeholder="Color" required>
    <input name="image" placeholder="Image URL" required>
    <button type="submit">Add</button>
  </form>
  <hr>
</body>
</html>